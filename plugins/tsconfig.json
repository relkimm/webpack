{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": false,
    "emitDeclarationOnly": false,
    // "declarationDir": "lib/types",
    "removeComments": false,
    "sourceMap": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "jsx": "react"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
